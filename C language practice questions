#include <stdio.h>

int main(){
    //declare a character array
    char studentName[30];
    int Total_classes;
    //attendace for subject1 from monday to friday
    int s1_mon,s1_tue,s1_wed,s1_thu,s1_fri;
    //attendace for subject 2 from monday to friday
    int s2_mon,s2_tue,s2_wed,s2_thu,s2_fri;
    //prompt student to enter student name
    printf("Enter Student name: ");
    scanf("%s",studentName);

    // toatl classes per subject
    printf("Enter total classes per subject: ");
    scanf("%d",&Total_classes);
    //attendace for subject 1
    printf("Enter Attendace for subject 1: \n ");
    printf("Monday:");
    scanf("%d",&s1_mon);
    printf("Tuesday:");
    scanf("%d",&s1_tue);
    printf("Wenesday:");
    scanf("%d",&s1_wed);
    printf("Thursday:");
    scanf("%d",&s1_thu);
    printf("Friday:");
    scanf("%d",&s1_fri);
    // Enter attendace for subject 2

    printf("Enter Attendace for subject 2:\n ");
    printf("Monday:");
    scanf("%d",&s2_mon);
    printf("Tuesday:");
    scanf("%d",&s2_tue);
    printf("Wenesday:");
    scanf("%d",&s2_wed);
    printf("Thursday:");
    scanf("%d",&s2_thu);
    printf("Friday:");
    scanf("%d",&s2_fri);

    //calculate attendace per subject
     int s1_total=s1_mon+s1_tue+s1_wed+s1_thu+s1_fri;
     int s2_total=s2_mon+s2_tue+s2_wed+s2_thu+s2_fri;

     //calculate attendace percentage
     float s1_percentage=((float)s1_total/Total_classes)*100;
     float s2_percentage=((float)s2_total/Total_classes)*100;
     //calculate day wise attendance
     int monday_total=s1_mon+s2_mon;
     int tuesday_total=s1_tue+s2_tue;
     int wenesday_total=s1_wed+s2_wed;
     int thursady_total=s1_thu+s2_thu;
     int friday_total=s1_fri+s2_fri;
//output section
printf("\n-----Attendace report of %s:---------\n ",studentName);
printf("Subject 1 Attendace : %d/%d(%.2f%%)\n",s1_total,Total_classes,s1_percentage);
printf("Subject 2 Attendace : %d/%d(%.2f%%)\n",s2_total,Total_classes,s2_percentage);

printf("\n Daywise Total Attendace:\n");
printf("Monday: %d\n",monday_total);
printf("Tuesday: %d\n",tuesday_total);
printf("Wenesday: %d\n",wenesday_total);
printf("Thursday: %d\n",thursady_total);
printf("Friday: %d\n",friday_total);
 
return 0;
}
